<openerp>
  <data>

    <record id="credit_management_profile_form" model="ir.ui.view">
      <field name="name">credit.management.profile.form</field>
      <field name="model">credit.management.profile</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form> <!-- editable="bottom" -->
          <field name="name"/>
          <field name="do_nothing"/>
          <field name="company_id"/>
          <notebook  colspan="4">
            <page string="Rules">
              <field name="profile_rule_ids" colspan="4" />
            </page>
          </notebook>
        </form>
      </field>
    </record>

    <record id="credit_management_profile_tree" model="ir.ui.view">
      <field name="name">credit.management.profile.tree</field>
      <field name="model">credit.management.profile</field>
      <field name="type">tree</field>
      <field name="arch" type="xml">
        <tree> <!-- editable="bottom" -->
          <field name="name"/>
          <field name="do_nothing"/>
        </tree>
      </field>
    </record>

    <menuitem
        name="Credit management configuration"
        parent="account.menu_finance_configuration"
        id="base_credit_management_configuration_menu"/>

    <record model="ir.actions.act_window" id="credit_profile_configuration_action">
      <field name="name">Credit profiles</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">credit.management.profile</field>
      <field name="domain"></field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="credit_management_profile_tree"/>
    </record>

    <menuitem
        name="Credit profiles"
        parent="base_credit_management_configuration_menu"
        action="credit_profile_configuration_action"
        id="credit_profile_configuration_action_menu"/>

    <record id="credit_mangement_profile_rule_form" model="ir.ui.view">
      <field name="name">credit.mangement.profile.rule.form</field>
      <field name="model">credit.management.profile.rule</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form> <!-- editable="bottom" -->
          <field name="name"/>
          <notebook colspan="4">
            <page string="Delay Setting">
              <field name="level"/>
              <field name="canal"/>
              <field name="delay_days"/>
              <field name="computation_mode"/>
            </page>
            <page string="Mail and reporting">
              <field name="mail_template_id"/>
            </page>
          </notebook>
        </form>
      </field>
    </record>

    <record id="credit_management_profile_rule_tree" model="ir.ui.view">
      <field name="name">credit.management.profile.rule.tree</field>
      <field name="model">credit.management.profile.rule</field>
      <field name="type">tree</field>
      <field name="arch" type="xml">
        <tree  editable="bottom">
          <field name="name"/>
          <field name="level"/>
          <field name="canal"/>
          <field name="delay_days"/>
          <field name="computation_mode"/>
          <field name="mail_template_id"/>
        </tree>
      </field>
    </record>
  </data>
</openerp>
