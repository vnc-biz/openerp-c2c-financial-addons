<openerp>
  <data>

    <record id="credit_management_run_tree" model="ir.ui.view">
      <field name="name">credit.management.run.tree</field>
      <field name="model">credit.management.run</field>
      <field name="type">tree</field>
      <field name="arch" type="xml">
        <tree> <!-- editable="bottom" -->
          <field name="name"/>
          <field name="state"/>
        </tree>
      </field>
    </record>

    <record id="credit_management_run_form" model="ir.ui.view">
      <field name="name">credit.management.run.form</field>
      <field name="model">credit.management.run</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form> <!-- editable="bottom" -->
          <field name="name"/>
          <newline/>
          <notebook colspan="4">
            <page string="Profile">
              <field name="profile_ids" colspan="4"/>
            </page>
            <page string="Report and reject">
              <field name="rejected_ids" colspan="4"/>
              <field name="report" colspan="4"/>
            </page>
          </notebook>
          <group col="3" colspan="4">
            <button name="generate_credit_lines"
                    string="Compute credit  lines"
                    colspan="1"
                    type="object" icon="gtk-execute"
                    attrs="{'invisible': [('state', '!=', 'draft')]}"/>
          </group>
          <field name="state"/>
        </form>
      </field>
    </record>



    <record model="ir.actions.act_window" id="credit_management_run">
      <field name="name">Credit management run</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">credit.management.run</field>
      <field name="domain"></field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="credit_management_run_tree"/>
    </record>


    <menuitem
        name="Credit management run"
        parent="base_credit_management_menu"
        action="credit_management_run"
        id="credit_management_run_menu"/>

  </data>
</openerp>
