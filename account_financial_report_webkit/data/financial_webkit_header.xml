<?xml version="1.0" ?>
<openerp>
    <data>
        <record id="financial_landscape_header" model="ir.header_webkit">
            <field name="footer_html"><![CDATA[
<html>
    <head>
        <meta content="text/html; charset=UTF-8" http-equiv="content-type"/>
        <script>
            function subst() {
            var vars={};
            var x=document.location.search.substring(1).split('&');
            for(var i in x) {var z=x[i].split('=',2);vars[z[0]] = unescape(z[1]);}
            var x=['frompage','topage','page','webpage','section','subsection','subsubsection'];
            for(var i in x) {
            var y = document.getElementsByClassName(x[i]);
            for(var j=0; j<y.length; ++j) y[j].textContent = vars[x[i]];
                }
            }
        </script>
    </head>
    <% import datetime %>
    <body style="border:0; margin: 0;" onload="subst()">
        <table style="border-top: 1px solid black; width: 100%">
            <tr >
                <td style="text-align:left;font-size:12;">${formatLang( str(datetime.datetime.today().date()),date=True)}</td>
                <td style="text-align:right;font-size:12;" width="90%">Page <span class="page"/></td><td style="text-align:left;font-size:12;">  of <span class="topage"/></td>
            </tr>
        </table>
    </body>
</html>]]></field>
            <field name="orientation">Landscape</field>
            <field name="format">A4</field>
            <field name="html"><![CDATA[
<html>
    <head>
        <meta content="text/html; charset=UTF-8" http-equiv="content-type"/>
        <script>
            function subst() {
            var vars={};
            var x=document.location.search.substring(1).split('&');
            for(var i in x) {var z=x[i].split('=',2);vars[z[0]] = unescape(z[1]);}
            var x=['frompage','topage','page','webpage','section','subsection','subsubsection'];
            for(var i in x) {
            var y = document.getElementsByClassName(x[i]);
            for(var j=0; j<y.length; ++j) y[j].textContent = vars[x[i]];
                }
            }
        </script>
        <style type="text/css">
            ${css}
        </style>
    </head>
    <body style="border:0; margin: 0;" onload="subst()">
        <table class="header" style="border-bottom: 0px solid black; width: 100%">
            <tr>
                <td style="text-align:left">${report_name} </td>
                <td/>
            </tr>
            <tr>
                <td style="text-align:left" >${company.partner_id.name |entity}</td>
                <td/>
            </tr>
        </table> ${_debug or ''|n} </body>
</html>]]>
            </field>
            <field eval="20.0" name="margin_top"/>
            <field name="css"><![CDATA[
body, table, td, span {
    font-family:Helvetica, arial;
}
.list_table, tr {
    border-color:gray;
    border-bottom:1px solid lightGrey;
    border-left:0px;
    border-right:0px;
    text-align:left;
    font-size:10px;
    padding-right:3px;
    padding-left:3px;
    padding-top:2px;
    padding-bottom:1px;
    border-collapse:collapse;
}
.list_table, td {
    word-wrap:break-word;
}
.list_table thead {
    background-color:#F0F0F0;
}
.data_table {
    border-color:gray;
    border-bottom:1px solid lightGrey;
    border-left:0px;
    border-right:0px;
    text-align:left;
    font-size:6px;
    padding-right:3px;
    padding-left:3px;
    padding-top:2px;
    padding-bottom:2px;
}
.data_table td {
    font-size:8px;
}
.title {
    font-size:10px;
    font-weight:bold;
}
thead {
    display:table-header-group;
}]]>
            </field>
            <field name="name">Financial Landscape Header</field>
        </record>
    </data>
</openerp>
